<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/front"
    android:orientation="vertical"
    tools:context=".ui.notifications.NotificationsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/profile"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/proedit"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:textColor="@color/black"
                android:gravity="right"
                android:textSize="18sp"/>

            <ImageView

                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@drawable/edit"
                />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <EditText
                    android:singleLine="true"
                    android:drawableStart="@drawable/person2"
                    android:drawablePadding="10dp"
                    android:id="@+id/nameBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:autofillHints="username"
                    android:background="@drawable/edittextdesign"
                    android:ems="10"
                    android:textSize="16sp"
                    android:enabled="false"
                    android:hint="Enter your name"
                    android:inputType="text"
                    android:padding="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <EditText
                    android:id="@+id/proemail"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/email"
                    android:layout_width="match_parent"
                    android:padding="10sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edittextdesign"
                    android:hint="Enter your eamil address"
                    android:ems="10"
                    android:textSize="16sp"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:inputType="textEmailAddress"
                  />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <EditText
                    android:id="@+id/pronumber"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/phone"
                    android:drawablePadding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="130dp"
                    android:layout_marginRight="10dp"
                    android:hint="Enter your phonenumber"
                    android:ems="10"
                    android:textSize="16sp"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:inputType="number"
                    android:padding="10sp"
                    android:background="@drawable/edittextdesign"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <EditText
                    android:id="@+id/procity"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/location"
                    android:drawablePadding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="190dp"
                    android:layout_marginRight="10dp"
                    android:hint="Enter your city"
                    android:ems="10"
                    android:textSize="16sp"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:inputType="text"
                    android:padding="10sp"
                    android:background="@drawable/edittextdesign" />

            </LinearLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/updateprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roundcornerbutton"
                android:text="Update Profile"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="240dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"


                />


        </androidx.cardview.widget.CardView>



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/prologoutbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundcornerbutton"
            android:text="LOGOUT"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"


            />





    </LinearLayout>



</LinearLayout>